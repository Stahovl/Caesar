{
  "metadata": [
    {
      "src": [
        {
          "src": "../",
          "files": [
            "Caesar.API/Caesar.API.csproj",
             "Caesar.App/Caesar.App.csproj",
             "Caesar.Core/Caesar.Core.csproj",
             "Caesar.Infrastructure/Caesar.Infrastructure.csproj"
            ],
            "exclude": [
              "**/bin/**",
              "**/obj/**",
              "_site/**"
            ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "Caesar doc",
      "_appTitle": "Caesar doc",
      "_enableSearch": true,
      "pdf": true
    }
  }
}