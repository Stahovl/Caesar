<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="Caesar.App.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:Caesar.App"
       xmlns:views="clr-namespace:Caesar.App.Views"
       Shell.FlyoutBehavior="Disabled"
       Title="Caesar Admin">

    <ShellContent Title="Login"
                  ContentTemplate="{DataTemplate views:LoginPage}"
                  Route="LoginPage" />

    <ShellContent Title="Main"
                  ContentTemplate="{DataTemplate views:MainPage}"
                  Route="MainPage" />

    <ShellContent Title="Menu Item Details"
                  ContentTemplate="{DataTemplate views:MenuItemDetailPage}"
                  Route="MenuItemDetailPage" />
    

</Shell>
